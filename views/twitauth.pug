extends layout.pug
block styles
	style.
		.auth-container {
			width:100%;
			height:100%;
			display:flex;
			flex-direction:column;
			align-items:center;
			justify-content:center;
			background-image: url('/img/drive-background.jpg');
			background-size:cover;
		}
		.auth-panel {
			
			font-size:2em;
			padding:32px;
			border-radius:32px;
			box-shadow:4px 4px 16px rgba(0,0,0,0.4);
			max-width:700px;
			display:flex;
			flex-direction:column;
			align-items:center;
			background-color:rgba(255,255,255,0.9);
		}
		.sign-in-btn {
			display:flex;
			justify-content:center;
			align-items:center;
			font-weight:bolder;
			text-decoration:none;
			max-height:2em;
			padding:0.5em;
			border-radius: 2em;
			background-color:#4285f4;
			box-shadow: 0 0 16px rgba(0,0,0,0.4);
			color: white;
		}
		.sign-in-btn:hover {
			filter:brightness(1.1);
		}
		.sign-in-btn:active {
			filter:brightness(0.9);
		}
		.auth-panel form {
			font-size: 0.6em;
			width:100%;
		}
		.google-logo {
			margin:1em;
		}
		hr {
			width:100%;
		}
		
block content
	div.auth-container
		div.auth-panel
			a(href=authUrl target="_blank").sign-in-btn Sign in
			hr
			form(action="/twitter/auth" method="post").column
				input(name="UserName" type="text" placeholder="UserName").form-control
				input(name="Password" type="password" placeholder="Password").form-control
				button(type="submit") Submit
